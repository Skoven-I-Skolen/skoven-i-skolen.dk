{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{{ attach_library('sis/header') }}

<div class="lexicon-search-wrapper" id="Search-leksikon">

	<input{{attributes}}/>{{ children }}
	<div {{ create_attribute().setAttribute('type', 'submit').addClass('header-search__submit') }} aria-label="search">
		{% include '@reusable-component/svg-icon.twig' with {
                'attributes': '',
                'svgIconName': 'search'
              } %}
	</div>

</div>
