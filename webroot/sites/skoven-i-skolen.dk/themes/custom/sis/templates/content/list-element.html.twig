
{% set typeAltrerLink = article_type.field_page_link.0.url %}
{% set typeUrl = path('entity.taxonomy_term.canonical', {'taxonomy_term': article_type.id}) %}

{% if children %}
  <div class="inspiration-overview__list-links">
    <div class="inspiration-overview__headline">{{ list_headline }}</div>
    <ul class="inspiration-overview__list">
      {% for child in children %}
        {{ child }}
      {% endfor %}
    </ul>
    <a class="inspiration-overview__more-link" href="{{ typeAltrerLink ?? typeUrl }}">
      {% if list_link_title %}
        {{ list_link_title }}
      {% else %}
        {{ "Go to all"|t() }}
      {% endif %}
      {% include '@reusable-component/svg-icon.twig' with {
        'attributes': '',
        'svgIconName': 'arrow-right'
      } %}
    </a>
  </div>
{% endif %}
